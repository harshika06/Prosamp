name: Deploy Serverless API

on:
  push:
    branches:
      - master  # Triggers the workflow on push to the 'master' branch

jobs:
  deploy:
    runs-on: ubuntu-latest  # The workflow will run on the latest version of Ubuntu

    steps:
    # Step 1: Checkout the repository code
    - name: Checkout repository
      uses: actions/checkout@v2
      # This action checks out your repository to the GitHub runner so the following steps can access the code.

    # Step 2: Set up AWS credentials to authenticate with AWS
    - name: Set up AWS credentials
      uses: aws-actions/configure-aws-credentials@v1
      with:
        aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
        aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
        aws-region: us-east-1  # Replace with your AWS region

    # Step 3: Deploy CloudFormation Stack using AWS CLI
    - name: Deploy CloudFormation Stack
      run: |
        aws cloudformation deploy \
          --template-file template.yml \
          --stack-name ServerlessAPIStack \
          --capabilities CAPABILITY_NAMED_IAM
      # This command deploys your CloudFormation stack named "ServerlessAPIStack" using the `template.yml` file.
      # The `--capabilities CAPABILITY_NAMED_IAM` flag is required because the template creates IAM resources (roles).
